@target(default=True)
def build():
    do_build()

def do_build():
    print("Building")

@target(requires=build)
def test():
    print("Testing")

@target(requires=build, help="Install me!")
def install(dest_dir="/"):
    print("Installing with dest_dir {0}".format(dest_dir))

@target
def clean():
    print("Cleaning")

@target(name="run", requires=(clean, build), help="Run with it")
def run_():
    print("Running")
